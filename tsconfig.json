{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "lib": ["ES6", "ES2022"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build/**/*"]
}
  